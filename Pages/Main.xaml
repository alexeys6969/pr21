<Page x:Class="documents_shashin.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:documents_shashin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="White">
        <Grid Height="80" VerticalAlignment="Top" Background="#8B8B8B">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Image/icon.png" Width="40" Height="40" Grid.Column="0"/>
            <TextBlock Text="Учёт входящих и исходящих документов" Grid.Column="1" FontSize="26" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            <Button Content="Выйти" Click="Exit" Grid.Column="2" Height="30" Background="White" VerticalAlignment="Top" Margin="0, 20, 15, 0"/>
        </Grid>
        <Grid Margin="0,80,0,0">
            <Border Margin="15,15,15,50" BorderBrush="Black" BorderThickness="1" >
                <ScrollViewer>
                    <StackPanel x:Name="parent">
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
            <Button Content="Добавить" Click="AddDocuments" Height="30" Width="100" Background="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15,0,0,12"/>
        </Grid>
    </Grid>
</Page>
