<Page x:Class="documents_shashin.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:documents_shashin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="White">
        <Grid Height="80" VerticalAlignment="Top" Background="#8B8B8B">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Image/icon.png" Width="40" Height="40" Grid.Column="0"/>
            <TextBlock Text="Добавить документ" Grid.Column="1" FontSize="26" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            <Button Content="Вернуться" Click="Back" Grid.Column="2" Height="30" Background="White" VerticalAlignment="Top" Margin="0, 20, 15, 0"/>
        </Grid>
        <Grid Margin="0,80,0,0" Width="250" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Image x:Name="src" Source="/Image/icon-black.png" Grid.Column="0" Grid.Row="0"/>
            <Button Content="Выбрать" Click="SelectImage" Height="40" Width="130" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Column="0" Grid.Row="1"/>
        </Grid>
        <Grid Margin="0,80,0,0" Width="550" HorizontalAlignment="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>
            <TextBlock Text="Укажите наименование:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <TextBox x:Name="tb_name" Text="" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="530" Grid.ColumnSpan="2"/>

            <TextBlock Text="Укажите ответственного:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1"/>
            <TextBox x:Name="tb_user" Text="" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="530" Grid.Row="1" Grid.ColumnSpan="2"/>

            <TextBlock Text="Укажите код документа:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="2"/>
            <TextBox x:Name="tb_id" Text="" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="530" Grid.Row="2" Grid.ColumnSpan="2"/>

            <TextBlock Text="Укажите дату поступления:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="3"/>
            <TextBox x:Name="tb_date" Text="" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="530" Grid.Row="3" Grid.ColumnSpan="2"/>

            <TextBlock Text="Укажите статус:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="4"/>
            <ComboBox x:Name="cb_status" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="530" Grid.Row="4" Grid.ColumnSpan="2">
                <TextBlock> Входящий</TextBlock>
                <TextBlock> Исходящий</TextBlock>
            </ComboBox>

            <TextBlock Text="Укажите направление:" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="5"/>
            <TextBox x:Name="tb_vector" Text="" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="438" Grid.Row="5"/>
            <Button Content="Сохранить" x:Name="btnAdd" Click="addDocument" Grid.Row="5" Margin="458,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" Width="82"/>
        </Grid>
    </Grid>
</Page>
