<UserControl x:Class="documents_shashin.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:documents_shashin.Elements"
             mc:Ignorable="d" d:DesignWidth="800" Height="166">
    <Grid Background="Transparent" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="140"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="img" 
               Source="/Image/icon-black.png" 
               Width="125" 
               Height="125" 
               Margin="10,5"
               Grid.Row="0" 
               Grid.RowSpan="4"
               Grid.Column="0"
               VerticalAlignment="Top"/>

        <Label Content="Наименование" 
               x:Name="IName" 
               FontWeight="Bold" 
               Grid.Row="0" 
               Grid.Column="1"
               Margin="5,2"/>

        <Label Content="Ответственный: Иванов И.И." 
               x:Name="IUser" 
               Grid.Row="1" 
               Grid.Column="1"
               Margin="5,2"/>

        <Label Content="Код документа: 000-000" 
               x:Name="ICode" 
               Grid.Row="2" 
               Grid.Column="1"
               Margin="5,2"/>

        <Label Content="Дата поступления: 09.11.2025" 
               x:Name="IDate" 
               Grid.Row="0" 
               Grid.Column="2"
               Margin="5,2"/>

        <Label Content="Статус: Входящий" 
               x:Name="IStatus" 
               Grid.Row="1" 
               Grid.Column="2"
               Margin="5,2"/>

        <Label Content="Направление: Строительство" 
               x:Name="IDirect" 
               Grid.Row="2" 
               Grid.Column="2"
               Margin="5,2"/>

        <StackPanel Grid.Row="3" 
                    Grid.Column="2" 
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal" 
                    Margin="5,10,5,5"
                    HorizontalAlignment="Left">
            <Button Content="Изменить" 
                    Click="EditDocument" 
                    Width="86" 
                    Margin="0,0,10,0"/>
            <Button Content="Удалить" 
                    Click="DeleteDocument" 
                    Width="86"/>
        </StackPanel>
    </Grid>
</UserControl>
